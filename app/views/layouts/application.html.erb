<!DOCTYPE html>
<html>
  <head>
    <title>食在管理</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <main>
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-3 header header-back">
            <%= render "layouts/header" %>
          </div>

          <div class="col-lg-9 py-2 px-5">
            <div><p class="text-success"><%= notice %></p></div>
            <%= yield %>
          </div>
        </div>
    </main>
  </body>
</html>
