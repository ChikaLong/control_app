<h1>在庫の管理</h1>

<%= render "items/form", item: @item %>

<table>
  <thead>
    <tr>
      <th></th>
      <th>商品名</th>
      <th>カテゴリ</th>
      <th>個数</th>
      <th>メモ</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= attachment_image_tag item, :image, :fill,30,30, fallback: "no-image.png", size: "30x30" %></td>
        <td><%= link_to item.name, item_path(item) %></td>
        <td><%= item.item_category.name %></td>
        <td><%= item.quantity %></td>
        <td><%= truncate(item.memo, length: 20) %></td>
        <td><%= link_to "修正", edit_item_path(item) %></td>
        <td><%= link_to "削除", item_path(item), method: :delete, data: { confirm: "削除しますか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>