<h2>在庫の管理</h2>

<%= render "items/form", item: @item %>

<table class="table mt-5">
  <thead>
    <tr>
      <th></th>
      <th>商品名</th>
      <th>カテゴリ</th>
      <th>在庫</th>
      <th style="width: 30%;">メモ</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= attachment_image_tag item, :image, :fill,50,50, fallback: "no-image.png", size: "50x50" %></td>
        <td><%= link_to item.name, item_path(item) %></td>
        <td><%= item.item_category.name %></td>
        <td><%= item.quantity %></td>
        <td><%= truncate(item.memo, length: 15) %></td>
        <td><%= link_to "修正", edit_item_path(item), class: "btn edit-btn" %></td>
        <td><%= link_to "削除", item_path(item), method: :delete, data: { confirm: "削除しますか？" }, class: "btn delete-btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "←マイページに戻る", user_path(current_user) %>