<h2><%= @item.name %></h2>

<div><%= attachment_image_tag @item, :image, :fill,100,100, fallback: "no-image.png", size: "100x100" %></div>

<table>
  <tr>
    <th>カテゴリ</th>
    <td><%= @item.item_category.name %></td>
  </tr>
  <tr>
    <th>個数</th>
    <td><%= @food.quantity %></td>
  </tr>
  <tr>
    <th>メモ</th>
    <td><%= @food.memo %></td>
  </tr>
  <tr>
    <td><%= link_to "修正", edit_item_path(@item) %></td>
    <td><%= link_to "削除", item_path(@item), method: :delete, data: { confirm: "削除しますか？" } %></td>
  </tr>
</table>