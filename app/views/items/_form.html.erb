<%= form_with model: item, local: true do |f| %>
  <div class="form-group">
    <%= f.label :image, "画像" %>
    <%= f.attachment_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :item_category, "カテゴリ" %>
    <%= f.collection_select(:item_category_id, ItemCategory.all, :id, :name, {include_blank: "--カテゴリ--"}, {class: "form-control"}) %>
  </div>

  <div class="form-group">
    <%= f.label :quantity, "個数" %>
    <%= f.select :quantity, options_for_select((1..99).to_a), include_blank: "0" %>
  </div>

  <div class="form-group">
    <%= f.label :memo, "メモ" %>
    <%= f.text_area :memo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit btn_text %>
  </div>
<% end %>