<div class="row main-item">
  <div class="col">
    <h2>期限の管理</h2>

    <%= render "foods/form", food: @food %>

    <%= render "foods/categories", food_categories: @food_categories %>

    <% if @foods.empty? %>
      <div>絞り込み：<%= @food_category.name %></div>
      <p>このカテゴリに該当する商品の登録がありません</p>
    <% else %>
      <div class="mt-3">絞り込み＞<%= @food_category.name %></div>

      <%= link_to "期限の短い順", food_category_search_path(sort_short_foods: "true", food_category_id: @food_category.id) %>
      <%= link_to "期限の長い順", food_category_search_path(sort_long_foods: "true", food_category_id: @food_category.id) %>

      <%= render "foods/list", foods: @foods %>
    <% end %>

    <%= link_to "←一覧へ戻る", foods_path %>
  </div>
</div>
