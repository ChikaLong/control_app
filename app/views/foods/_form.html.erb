<%= form_with model: food, local: true do |f| %>
  <div class="row mt-4">
    <div class="col-xl-4">
      <div class="form-group">
        <%= f.label :image, "画像" %><br>
        <%= attachment_image_tag food, :image, :fill,150,150, fallback: "no-image.png", id: "img_prev", size: "150x150" %>
        <%= f.attachment_field :image, class: "mt-2" %>
      </div>
    </div>

    <div class="col-xl-8">
      <div class="form-group">
        <%= f.label :name, "商品名" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :food_category, "カテゴリ" %>
        <%= f.collection_select(:food_category_id, FoodCategory.all, :id, :name, {include_blank: "--カテゴリ--"}, {class: "form-control"}) %>
      </div>

      <div class="form-group">
        <%= f.label :start_time, "賞味期限(消費期限)" %>
        <%= f.date_field :start_time, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :memo, "メモ" %>
        <%= f.text_area :memo, class: "form-control" %>
      </div>

      <div class="form-group text-center">
        <%= f.submit btn_text, class: "btn form-btn" %>
      </div>
    </div>
  </div>
<% end %>