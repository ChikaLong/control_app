<h1>期限の管理</h1>

<%= render "foods/form", food: @food %>

<table>
  <thead>
    <tr>
      <th></th>
      <th>商品名</th>
      <th>カテゴリ</th>
      <th>期限</th>
      <th>メモ</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= attachment_image_tag food, :image, :fill,30,30, fallback: "no-image.png", size: "30x30" %></td>
        <td><%= link_to food.name, food_path(food) %></td>
        <td><%= food.food_category.name %></td>
        <td><%= food.start_time.strftime('%Y/%m/%d') %></td>
        <td><%= truncate(food.memo, length: 20) %></td>
        <td><%= link_to "修正", edit_food_path(food) %></td>
        <td><%= link_to "削除", food_path(food), method: :delete, data: { confirm: "削除しますか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>